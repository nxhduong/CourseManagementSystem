@page "/ManageSemesters"

<PageTitle>UNI - CMS - Manage Semesters</PageTitle>

<h1>School years and semesters</h1>
@if (1==1)
{
    <EditForm>
        //
    </EditForm>
}
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Year</th>
            <th>Semester</th>
            <th>Edit/Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Enumerable.Range(0,5))
        {
            <tr>
                <td>Year</td>
                <td>Semester</td>
                <td>
                    <button type="button" class="btn btn-primary" @onclick="@ModifyRow(i)">Modify</button>
                </td>
            </tr>
        }
    </tbody>
</table>